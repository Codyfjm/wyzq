<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/top_height"
    android:layout_alignParentBottom="true"
    android:background="@drawable/button_back" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="horizontal" >

        <!-- 首页 -->
        <LinearLayout
            android:id="@+id/bottom_order"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/order_image1"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_gravity="center_horizontal"
                android:scaleType="fitCenter"
                android:layout_marginTop="3dp"
                android:src="@drawable/battery_tab_icon01_pressed" />

            <TextView
                android:id="@+id/order_text1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="首页"
                android:textColor="#FF6700" />
        </LinearLayout>

        <!-- 物业专区 -->

        <LinearLayout
            android:id="@+id/bottom_myorder"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/order_image2"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_gravity="center_horizontal"
                android:scaleType="fitCenter"
                android:layout_marginTop="3dp"
                android:src="@drawable/battery_tab_icon04_normal" />

            <TextView
                android:id="@+id/order_text2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="社区服务"
                android:textColor="#666666" />
                
            <!--ImageView
                android:id="@+id/order_image2"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_gravity="center_horizontal"
                android:scaleType="fitCenter"
                android:layout_marginTop="3dp"
                android:src="@drawable/battery_tab_icon04_normal" />

            <TextView
                android:id="@+id/order_text2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="电视直播"
                android:textColor="#666666" /-->
        </LinearLayout>

        <!-- 我要说说 -->
        <LinearLayout
            android:id="@+id/bottom_wallet"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/order_image3"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="3dp"
                android:scaleType="fitCenter"
                android:src="@drawable/battery_tab_icon05_normal" />

            <TextView
                android:id="@+id/order_text3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="我要说说"
                android:textColor="#666666" />
        </LinearLayout>

        <!-- 更多 -->

        <LinearLayout
            android:id="@+id/bottom_other"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/order_image4"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_gravity="center_horizontal"
                android:scaleType="fitCenter"
                android:layout_marginTop="3dp"
                android:src="@drawable/battery_tab_icon02_normal" />

            <TextView
                android:id="@+id/order_text4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="更多"
                android:textColor="#666666" />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>