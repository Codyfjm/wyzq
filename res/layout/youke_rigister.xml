<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F0F0F0"
    android:orientation="vertical" >

    <include
        android:id="@+id/ii_title"
        layout="@layout/top_activity" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="25dp"
        android:paddingLeft="@dimen/login_left_15"
        android:text="请填写您的身份信息"
        android:textColor="#A5A5A5"
        android:textSize="13sp" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="#FFFFFF"
        android:orientation="vertical" >

        <View
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:background="#F0F0F0" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="#FFFFFF"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="@dimen/login_bottom_10"
                android:paddingLeft="@dimen/login_left_15"
                android:paddingTop="@dimen/login_bottom_10"
                android:text="手机号"
                android:textColor="#A5A5A5"
                android:textSize="15sp" />

            <EditText
                android:id="@+id/login_phone"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="#FFFFFF"
                android:inputType="phone"
                android:paddingBottom="@dimen/login_bottom_10"
                android:paddingLeft="@dimen/login_bottom_10"
                android:paddingTop="@dimen/login_bottom_10"
                android:textColor="#676767"
                android:textSize="15sp" />
        </LinearLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="@dimen/login_left_15"
            android:layout_marginRight="@dimen/login_left_15"
            android:background="#F0F0F0" />

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="#FFFFFF" >

            <TextView
                android:id="@+id/you"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="@dimen/login_bottom_10"
                android:paddingLeft="@dimen/login_left_15"
                android:paddingTop="@dimen/login_bottom_10"
                android:text="验证码"
                android:textColor="#A5A5A5"
                android:textSize="15sp" />

            <Button
                android:id="@+id/login_rig_visitor"
                android:layout_width="100dp"
                android:layout_height="@dimen/login_button_height_35"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/login_left_15"
                android:layout_marginRight="2dp"
                android:background="@drawable/rig_but"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:text="获取验证码"
                android:textColor="#A4A4A4"
                android:textSize="15sp" />

            <EditText
                android:id="@+id/login_yzm"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/you"
                android:background="#FFFFFF"
                android:inputType="number"
                android:layout_marginRight="105dp"
                android:paddingBottom="@dimen/login_bottom_10"
                android:paddingLeft="@dimen/login_bottom_10"
                android:paddingTop="@dimen/login_bottom_10"
                android:textColor="#676767"
                android:textSize="15sp" />
        </RelativeLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="@dimen/login_left_15"
            android:layout_marginRight="@dimen/login_left_15"
            android:background="#F0F0F0" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="#FFFFFF"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="@dimen/login_bottom_10"
                android:paddingLeft="@dimen/login_left_15"
                android:paddingTop="@dimen/login_bottom_10"
                android:text="密    码"
                android:textColor="#A5A5A5"
                android:textSize="15sp" />

            <EditText
                android:id="@+id/login_password"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="#FFFFFF"
                android:inputType="textPassword"
                android:paddingBottom="@dimen/login_bottom_10"
                android:paddingLeft="@dimen/login_bottom_10"
                android:paddingTop="@dimen/login_bottom_10"
                android:textColor="#676767"
                android:textSize="15sp" />
        </LinearLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="@dimen/login_left_15"
            android:layout_marginRight="@dimen/login_left_15"
            android:background="#F0F0F0" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="#FFFFFF"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="@dimen/login_bottom_10"
                android:paddingLeft="@dimen/login_left_15"
                android:paddingTop="@dimen/login_bottom_10"
                android:text="确认密码"
                android:textColor="#A5A5A5"
                android:textSize="15sp" />

            <EditText
                android:id="@+id/login_password2"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="#FFFFFF"
                android:inputType="textPassword"
                android:paddingBottom="@dimen/login_bottom_10"
                android:paddingLeft="@dimen/login_bottom_10"
                android:paddingTop="@dimen/login_bottom_10"
                android:textColor="#676767"
                android:textSize="15sp" />
        </LinearLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:background="#F0F0F0" />
    </LinearLayout>

    <Button
        android:id="@+id/login_but"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/login_button_height_44"
        android:layout_marginLeft="@dimen/login_left_15"
        android:layout_marginRight="@dimen/login_left_15"
        android:layout_marginTop="30dp"
        android:background="@drawable/login_but"
        android:text="确 定"
        android:textColor="#FFFFFF"
        android:textSize="18sp" />

</LinearLayout>