<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#F0F0F0"
    android:orientation="vertical" >

    <!-- 主题图片 -->

    <com.lemon95.wyzq.myview.image.SlideShowView
        android:id="@+id/slideshowView"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/dim_190_dp" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="#F0F0F0"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal" >

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:gravity="center_vertical|center_horizontal"
                android:orientation="vertical" >

                <ImageView
                    android:id="@+id/home_video"
                    android:layout_width="@dimen/dim_50_dp"
                    android:layout_height="@dimen/dim_50_dp"
                    android:layout_gravity="center_vertical|center_horizontal"
                    android:scaleType="fitCenter"
                    android:src="@drawable/tv" >
                </ImageView>
            </LinearLayout>

            <View
                android:layout_width="1dp"
                android:layout_height="fill_parent"
                android:background="#98999A"
                android:visibility="gone" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:gravity="center_vertical|center_horizontal"
                android:orientation="vertical" >

                <ImageView
                    android:id="@+id/home_info"
                    android:layout_width="@dimen/dim_50_dp"
                    android:layout_height="@dimen/dim_50_dp"
                    android:layout_gravity="center_vertical|center_horizontal"
                    android:scaleType="fitCenter"
                    android:src="@drawable/wuye" >
                </ImageView>
            </LinearLayout>

            <View
                android:layout_width="1dp"
                android:layout_height="fill_parent"
                android:background="#98999A"
                android:visibility="gone" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:gravity="center_vertical|center_horizontal"
                android:orientation="vertical" >

                <ImageView
                    android:id="@+id/home_open"
                    android:layout_width="@dimen/dim_50_dp"
                    android:layout_height="@dimen/dim_50_dp"
                    android:layout_gravity="center_vertical|center_horizontal"
                    android:scaleType="fitCenter"
                    android:src="@drawable/key" >
                </ImageView>
            </LinearLayout>
        </LinearLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:background="#98999A"
            android:visibility="gone" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:gravity="center_vertical|center_horizontal"
                android:orientation="vertical" >

                <ImageView
                    android:id="@+id/home_dianhua"
                    android:layout_width="@dimen/dim_50_dp"
                    android:layout_height="@dimen/dim_50_dp"
                    android:layout_gravity="center_vertical|center_horizontal"
                    android:scaleType="fitCenter"
                    android:src="@drawable/dianhua" >
                </ImageView>
            </LinearLayout>

            <View
                android:layout_width="1dp"
                android:layout_height="fill_parent"
                android:background="#98999A"
                android:visibility="gone" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:gravity="center_vertical|center_horizontal"
                android:orientation="vertical"
                 >

                <ImageView
                    android:id="@+id/home_baoxiu"
                    android:layout_width="@dimen/dim_50_dp"
                    android:layout_height="@dimen/dim_50_dp"
                    android:layout_gravity="center_vertical|center_horizontal"
                    android:scaleType="fitCenter"
                    android:src="@drawable/kuaidi">
                </ImageView>
            </LinearLayout>

            <View
                android:layout_width="1dp"
                android:layout_height="fill_parent"
                android:background="#98999A"
                android:visibility="gone" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:gravity="center_vertical|center_horizontal"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/home_share"
                    android:layout_width="@dimen/dim_50_dp"
                    android:layout_height="@dimen/dim_50_dp"
                    android:layout_gravity="center_vertical|center_horizontal"
                    android:scaleType="fitCenter"
                    android:src="@drawable/video_share">
                </ImageView>
            </LinearLayout>
        </LinearLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:background="#98999A"
            android:visibility="gone" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:gravity="center_vertical|center_horizontal"
                android:orientation="vertical" >

                <ImageView
                    android:layout_width="@dimen/dim_50_dp"
                    android:layout_height="@dimen/dim_50_dp"
                    android:layout_gravity="center_vertical|center_horizontal"
                    android:scaleType="fitCenter"
                    android:src="@drawable/earth"
                    android:textSize="13sp"
                    android:visibility="gone" >
                </ImageView>
            </LinearLayout>

            <View
                android:layout_width="1dp"
                android:layout_height="fill_parent"
                android:background="#98999A"
                android:visibility="gone" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:gravity="center_vertical|center_horizontal"
                android:orientation="vertical"
                android:visibility="gone" >

                <ImageView
                    android:layout_width="@dimen/dim_50_dp"
                    android:layout_height="@dimen/dim_50_dp"
                    android:layout_gravity="center_vertical|center_horizontal"
                    android:scaleType="fitCenter" >
                </ImageView>
            </LinearLayout>

            <View
                android:layout_width="1dp"
                android:layout_height="fill_parent"
                android:background="#98999A"
                android:visibility="gone" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:gravity="center_vertical|center_horizontal"
                android:orientation="vertical" >

                <ImageView
                    android:layout_width="@dimen/dim_50_dp"
                    android:layout_height="@dimen/dim_50_dp"
                    android:layout_gravity="center_vertical|center_horizontal"
                    android:scaleType="fitCenter" >
                </ImageView>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>