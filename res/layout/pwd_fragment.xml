<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F0F0F0"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/other_image_width"
        android:background="#FFFFFF"
        android:orientation="vertical" >

        <View
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:background="#F0F0F0" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="#FFFFFF"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="@dimen/login_bottom_10"
                android:paddingLeft="@dimen/login_left_15"
                android:paddingTop="@dimen/login_bottom_10"
                android:text="原密码"
                android:textColor="#A5A5A5"
                android:textSize="15sp" />

            <EditText
                android:id="@+id/pwd"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="#FFFFFF"
                android:inputType="textPassword"
                android:paddingBottom="@dimen/login_bottom_10"
                android:paddingLeft="@dimen/login_bottom_10"
                android:paddingTop="@dimen/login_bottom_10"
                android:textColor="#676767"
                android:textSize="15sp" />
        </LinearLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="@dimen/login_left_15"
            android:layout_marginRight="@dimen/login_left_15"
            android:background="#F0F0F0" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="#FFFFFF"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="@dimen/login_bottom_10"
                android:paddingLeft="@dimen/login_left_15"
                android:paddingTop="@dimen/login_bottom_10"
                android:text="新密码"
                android:textColor="#A5A5A5"
                android:textSize="15sp" />

            <EditText
                android:id="@+id/login_password"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="#FFFFFF"
                android:inputType="textPassword"
                android:paddingBottom="@dimen/login_bottom_10"
                android:paddingLeft="@dimen/login_bottom_10"
                android:paddingTop="@dimen/login_bottom_10"
                android:textColor="#676767"
                android:textSize="15sp" />
        </LinearLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="@dimen/login_left_15"
            android:layout_marginRight="@dimen/login_left_15"
            android:background="#F0F0F0" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="#FFFFFF"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="@dimen/login_bottom_10"
                android:paddingLeft="@dimen/login_left_15"
                android:paddingTop="@dimen/login_bottom_10"
                android:text="确认密码"
                android:textColor="#A5A5A5"
                android:textSize="15sp" />

            <EditText
                android:id="@+id/login_password2"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="#FFFFFF"
                android:inputType="textPassword"
                android:paddingBottom="@dimen/login_bottom_10"
                android:paddingLeft="@dimen/login_bottom_10"
                android:paddingTop="@dimen/login_bottom_10"
                android:textColor="#676767"
                android:textSize="15sp" />
        </LinearLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:background="#F0F0F0" />
    </LinearLayout>

    <Button
        android:id="@+id/login_but"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/login_button_height_44"
        android:layout_marginLeft="@dimen/login_left_15"
        android:layout_marginRight="@dimen/login_left_15"
        android:layout_marginTop="30dp"
        android:background="@drawable/login_but"
        android:text="修   改"
        android:textColor="#FFFFFF"
        android:textSize="18sp" />

</LinearLayout>