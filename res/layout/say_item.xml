<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F0F0F0"
    android:orientation="vertical"
    android:scrollbars="none" >

    <View
        android:layout_width="fill_parent"
        android:layout_height="0.5dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/line_png" />

    <EditText
        android:id="@+id/shop_des"
        android:layout_width="fill_parent"
        android:layout_height="80dp"
        android:background="#FFFFFF"
        android:hint="发表评论..."
        android:lines="3"
        android:paddingLeft="6dp"
        android:textColor="#504C41"
        android:textColorHint="#A0A0A0"
        android:textSize="15sp" />

    <View
        android:layout_width="fill_parent"
        android:layout_height="0.5dp"
        android:background="@drawable/line_png" />
    
    <Button
        android:id="@+id/login_but"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/login_button_height_44"
        android:layout_marginLeft="@dimen/login_left_15"
        android:layout_marginRight="@dimen/login_left_15"
        android:layout_marginTop="30dp"
        android:background="@drawable/login_but"
        android:text="提    交"
        android:textColor="#FFFFFF"
        android:textSize="18sp" />

</LinearLayout>