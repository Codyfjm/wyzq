<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F0F0F0"
    android:orientation="vertical"
    android:scrollbars="none" >

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="44dp" >

        <Spinner
            android:id="@+id/shop_date"
            android:layout_width="fill_parent"
            android:layout_height="44dp"
            android:background="#FFFFFF"
            android:paddingLeft="5dp"
            android:textColor="#504C41"
            android:textColorHint="#A0A0A0"
            android:textSize="16sp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:src="@drawable/abs__spinner_ab_default_holo_light" />
    </RelativeLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="0.5dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/line_png" />

    <EditText
        android:id="@+id/shop_des"
        android:layout_width="fill_parent"
        android:layout_height="80dp"
        android:background="#FFFFFF"
        android:hint="我要说的话题..."
        android:lines="3"
        android:paddingLeft="6dp"
        android:textColor="#504C41"
        android:textColorHint="#A0A0A0"
        android:textSize="15sp" />

    <View
        android:layout_width="fill_parent"
        android:layout_height="0.5dp"
        android:background="@drawable/line_png" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="100dp"
        android:layout_marginTop="25dp"
        android:background="@drawable/line_back"
        android:orientation="horizontal"
        android:paddingLeft="10dp" >

        <RelativeLayout
            android:id="@+id/shop_rl_camera1"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_gravity="center_vertical|center_horizontal"
            android:visibility="gone" >

            <ImageView
                android:id="@+id/shop_img2_camera1"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_centerVertical="true"
                android:scaleType="fitXY"
                android:src="@drawable/zufang_main_default2" />

            <ImageButton
                android:id="@+id/shop_ib_camera1"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:layout_marginRight="3dp"
                android:background="@drawable/delete" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/shop_rl_camera2"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_gravity="center_vertical|center_horizontal"
            android:visibility="gone" >

            <ImageView
                android:id="@+id/shop_img2_camera2"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_centerVertical="true"
                android:scaleType="fitXY"
                android:src="@drawable/zufang_main_default2" />

            <ImageButton
                android:id="@+id/shop_ib_camera2"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:layout_marginRight="3dp"
                android:background="@drawable/delete" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/shop_rl_camera3"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_gravity="center_vertical|center_horizontal"
            android:visibility="gone" >

            <ImageView
                android:id="@+id/shop_img2_camera3"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_centerVertical="true"
                android:scaleType="fitXY"
                android:src="@drawable/zufang_main_default2" />

            <ImageButton
                android:id="@+id/shop_ib_camera3"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:layout_marginRight="3dp"
                android:background="@drawable/delete" />
        </RelativeLayout>

        <!--
        <RelativeLayout
            android:id="@+id/shop_rl_camera4"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_gravity="center_vertical|center_horizontal"
            android:visibility="gone" >

            <ImageView
                android:id="@+id/shop_img2_camera4"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_centerVertical="true"
                android:scaleType="fitXY"
                android:src="@drawable/zufang_main_default2" />

            <ImageButton
                android:id="@+id/shop_ib_camera4"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:layout_marginRight="3dp"
                android:background="@drawable/delete" />
        </RelativeLayout
        -->

        <ImageView
            android:id="@+id/shop_img_camera_mentou"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_gravity="center_vertical|center_horizontal"
            android:layout_marginLeft="3dp"
            android:src="@drawable/pic_fabu" />

        <TextView
            android:id="@+id/say_tv_camera"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10dp"
            android:text="添加图片"
            android:textColor="#A0A0A0"
            android:textSize="15sp" />
    </LinearLayout>

    <Button
        android:id="@+id/login_but"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/login_button_height_44"
        android:layout_marginLeft="@dimen/login_left_15"
        android:layout_marginRight="@dimen/login_left_15"
        android:layout_marginTop="30dp"
        android:background="@drawable/login_but"
        android:text="提    交"
        android:textColor="#FFFFFF"
        android:textSize="18sp" />

</LinearLayout>